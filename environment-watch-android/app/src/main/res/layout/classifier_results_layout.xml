<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/success"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="5sp"
        android:layout_marginTop="130sp"
        android:text="Success!"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:textColor="#800000"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Thank you for submitting an image of this endangered species. You're contribution will help scientists and enthusiests everywhere to monitor their populations and locations."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100sp"
        android:padding="5sp"
        android:gravity="center"
        android:layout_gravity="bottom|center">

        <Button
            android:id="@+id/back_to_homescreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:padding="5sp"
            android:layout_marginEnd="5sp"
            android:text="Back to homescreen"/>

        <Button
            android:id="@+id/quit_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:text="Quit app"/>
    </LinearLayout>

</LinearLayout>